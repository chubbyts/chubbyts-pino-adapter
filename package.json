{
  "name": "@chubbyts/chubbyts-pino-adapter",
  "type": "module",
  "version": "1.3.0",
  "description": "Pino adapter for chubbyts-log-types, PSR-3 inspired.",
  "keywords": [
    "chubbyts",
    "log",
    "logger",
    "pino",
    "adapter",
    "psr-3"
  ],
  "author": "Dominik Zogg",
  "license": "MIT",
  "repository": "chubbyts/chubbyts-pino-adapter",
  "scripts": {
    "build": "rm -rf ./dist && tsc -b ./tsconfig.types.json ./tsconfig.esm.json ./tsconfig.cjs.json && node ./rename-commonjs.js",
    "cs-fix": "prettier --write src tests",
    "cs": "prettier --check src tests",
    "infection": "stryker run",
    "lint-fix": "eslint src tests --fix",
    "lint": "eslint src tests",
    "prepare": "npm run build",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./*": {
      "types": "./*.d.ts",
      "require": "./*.cjs",
      "import": "./*.js",
      "default": "./*.js"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@chubbyts/chubbyts-log-types": "^1.3.1",
    "pino": "^8.14.1"
  },
  "devDependencies": {
    "@chubbyts/chubbyts-eslint": "^2.0.2",
    "@chubbyts/chubbyts-function-mock": "^1.4.0",
    "@chubbyts/chubbyts-packaging": "^1.0.3",
    "@stryker-mutator/core": "^7.1.1",
    "@stryker-mutator/jest-runner": "^7.1.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
